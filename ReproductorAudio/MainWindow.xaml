<Window x:Class="ReproductorAudio.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Reproductor de Audio By Nicolas Ayala" 
        Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#1a1a2e"
        ResizeMode="CanMinimize"
        Icon="app.ico">

    <Window.Resources>
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#16213e"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#0f3460"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="200"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#0f3460" CornerRadius="0,0,20,20">
            <Grid Margin="30,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Logo -->
                <Image Grid.Column="0" 
                       Source="app.ico" 
                       Width="50" 
                       Height="50" 
                       Margin="0,0,20,0"
                       VerticalAlignment="Center"/>

                <!-- Texto -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="🎵 Reproductor de Audio" 
                              FontSize="28" 
                              FontWeight="Bold" 
                              Foreground="#e94560"/>
                    <TextBlock Text="By Nicolas Ayala" 
                              FontSize="14" 
                              Foreground="#8892b0" 
                              Margin="0,5,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Área de información central -->
        <Border Grid.Row="1" Background="#16213e" 
                CornerRadius="15"
                Padding="20">
            <StackPanel VerticalAlignment="Center">
                <TextBlock x:Name="txtCurrentSong" 
                          Text="No hay ninguna canción cargada" 
                          FontSize="22" 
                          FontWeight="SemiBold"
                          Foreground="White" 
                          TextAlignment="Center"
                          TextWrapping="Wrap"
                          Margin="0,0,0,20"/>

                <TextBlock x:Name="txtStatus" 
                          Text="Esperando..." 
                          FontSize="14" 
                          Foreground="#8892b0" 
                          TextAlignment="Center"
                          Margin="0,0,0,30"/>

                <!-- Barra de progreso -->
                <Grid Margin="0,10">
                    <Slider x:Name="sliderProgress" 
                           Minimum="0" 
                           Maximum="100" 
                           Value="0"
                           Height="8"
                           Foreground="#e94560"
                           Background="#0f3460"
                           ValueChanged="SliderProgress_ValueChanged"/>
                </Grid>

                <Grid Margin="0,5,0,0">
                    <TextBlock x:Name="txtCurrentTime" 
                              Text="00:00" 
                              FontSize="12" 
                              Foreground="#8892b0"
                              HorizontalAlignment="Left"/>
                    <TextBlock x:Name="txtTotalTime" 
                              Text="00:00" 
                              FontSize="12" 
                              Foreground="#8892b0"
                              HorizontalAlignment="Right"/>
                </Grid>

                <!-- Botón de descarga (visible solo para YouTube) -->
                <Button x:Name="btnDownload" 
                       Content="⬇️ Descargar Canción" 
                       Style="{StaticResource ModernButton}"
                       Background="#e94560"
                       FontSize="16"
                       Padding="20,12"
                       Margin="0,30,0,0"
                       Visibility="Collapsed"
                       Click="BtnDownload_Click"/>
            </StackPanel>
        </Border>

        <!-- Panel de controles -->
        <Border Grid.Row="2" Background="#0f3460" Padding="20">
            <StackPanel>
                <!-- Controles de reproducción -->
                <StackPanel Orientation="Horizontal" 
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,20">
                    <Button x:Name="btnPrevious" 
                           Content="⏮️" 
                           Style="{StaticResource ModernButton}"
                           Width="60" 
                           Height="60"
                           FontSize="20"
                           Click="BtnPrevious_Click"/>

                    <Button x:Name="btnPlay" 
                           Content="▶️" 
                           Style="{StaticResource ModernButton}"
                           Width="80" 
                           Height="80"
                           FontSize="30"
                           Background="#e94560"
                           Margin="15,0"
                           Click="BtnPlay_Click"/>

                    <Button x:Name="btnStop" 
                           Content="⏹️" 
                           Style="{StaticResource ModernButton}"
                           Width="60" 
                           Height="60"
                           FontSize="20"
                           Click="BtnStop_Click"/>

                    <Button x:Name="btnNext" 
                           Content="⏭️" 
                           Style="{StaticResource ModernButton}"
                           Width="60" 
                           Height="60"
                           FontSize="20"
                           Click="BtnNext_Click"/>
                </StackPanel>

                <!-- Controles de carga -->
                <StackPanel Orientation="Horizontal" 
                           HorizontalAlignment="Center">
                    <Button Content="📁 Cargar Archivo" 
                           Style="{StaticResource ModernButton}"
                           Click="BtnLoadFile_Click"/>

                    <Button Content="🌐 YouTube" 
                           Style="{StaticResource ModernButton}"
                           Background="#e94560"
                           Click="BtnLoadYouTube_Click"/>

                    <TextBlock Text="🔊 Volumen:" 
                              Foreground="White" 
                              VerticalAlignment="Center"
                              Margin="20,0,10,0"
                              FontSize="14"/>

                    <Slider x:Name="sliderVolume" 
                           Width="150" 
                           Minimum="0" 
                           Maximum="100" 
                           Value="50"
                           VerticalAlignment="Center"
                           Foreground="#e94560"
                           ValueChanged="SliderVolume_ValueChanged"/>

                    <TextBlock x:Name="txtVolume" 
                              Text="50%" 
                              Foreground="#8892b0" 
                              VerticalAlignment="Center"
                              Margin="10,0,0,0"
                              FontSize="14"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>